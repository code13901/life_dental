---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About Us', href: '/about-us', dropdown: [
    { name: 'Our Practice', href: '/about-us/our-practice' },
    { name: 'Meet the Team', href: '/about-us/meet-the-team' }
  ] },
  { name: 'Services', href: '/services', megaMenu: true, columns: [
    {
      title: 'General Dentistry',
      links: [
        { name: 'Checkups', href: '/services/general-dentistry/checkups' },
        { name: 'Cleanings', href: '/services/general-dentistry/cleanings' },
        { name: 'Fillings', href: '/services/general-dentistry/fillings' }
      ]
    },
    {
      title: 'Cosmetic Dentistry',
      links: [
        { name: 'Teeth Whitening', href: '/services/cosmetic-dentistry/teeth-whitening' },
        { name: 'Veneers', href: '/services/cosmetic-dentistry/veneers' },
        { name: 'Bonding', href: '/services/cosmetic-dentistry/bonding' }
      ]
    },
    {
      title: 'Orthodontics',
      links: [
        { name: 'Braces', href: '/services/orthodontics/braces' },
        { name: 'Invisalign', href: '/services/orthodontics/invisalign' }
      ]
    }
  ] },
  { name: 'Our Team', href: '/our-team' },
  { name: 'New Patients', href: '/new-patients' },
  { name: 'Contact', href: '/contact' },
  { name: 'Blog', href: '/blog' },
];
---

<nav class="bg-transparent fixed w-full z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0">
          <img class="h-20 w-auto" src="/src/assets/images/logo.png" alt="Life.Dental">
        </a>
        <div class="hidden md:flex md:items-center md:space-x-8 ml-10">
          {navItems.map((item) => (
            <div class="relative group">
              <a href={item.href} class="text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-lg font-semibold">
                {item.name}
              </a>
              {item.dropdown && (
                <div class="absolute left-0 mt-2 w-48 bg-white shadow-lg rounded-md hidden group-hover:block">
                  <div class="py-1">
                    {item.dropdown.map((dropdownItem) => (
                      <a href={dropdownItem.href} class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-600 hover:text-white">
                        {dropdownItem.name}
                      </a>
                    ))}
                  </div>
                </div>
              )}
              {item.megaMenu && (
                <div class="absolute left-0 mt-2 w-screen max-w-7xl bg-white shadow-lg hidden group-hover:block">
                  <div class="grid grid-cols-3 gap-8 p-8">
                    {item.columns.map((column) => (
                      <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">{column.title}</h3>
                        <ul class="space-y-2">
                          {column.links.map((link) => (
                            <li>
                              <a href={link.href} class="text-gray-700 hover:text-blue-600 block px-4 py-2 text-sm">
                                {link.name}
                              </a>
                            </li>
                          ))}
                        </ul>
                      </div>
                    ))}
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
      <div class="hidden md:flex items-center space-x-4">
        <a href="/contact" class="bg-blue-600 text-white px-4 py-2 rounded-md text-lg font-semibold hover:bg-blue-700">Contact Us</a>
      </div>
      <div class="-mr-2 flex md:hidden">
        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-blue-600 focus:outline-none focus:text-blue-600" aria-controls="mobile-menu" aria-expanded="false" onclick="toggleMenu()">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="md:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {navItems.map((item) => (
        <div>
          <a href={item.href} class="text-gray-700 hover:bg-blue-600 hover:text-white block px-3 py-2 rounded-md text-base font-semibold">
            {item.name}
          </a>
          {item.dropdown && (
            <div class="pl-4">
              {item.dropdown.map((dropdownItem) => (
                <a href={dropdownItem.href} class="text-gray-700 hover:bg-blue-600 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
                  {dropdownItem.name}
                </a>
              ))}
            </div>
          )}
          {item.megaMenu && (
            <div class="pl-4">
              {item.columns.map((column) => (
                <div class="py-4">
                  <h3 class="text-lg font-semibold text-gray-900">{column.title}</h3>
                  <ul class="space-y-2">
                    {column.links.map((link) => (
                      <li>
                        <a href={link.href} class="text-gray-700 hover:bg-blue-600 hover:text-white block px-3 py-2 rounded-md text-base font-medium">
                          {link.name}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          )}
        </div>
      ))}
      <a href="/contact" class="bg-blue-600 text-white block px-3 py-2 rounded-md text-base font-medium hover:bg-blue-700">Contact Us</a>
    </div>
  </div>

  <script is:raw src="/src/theme.js"></script>
</nav>
